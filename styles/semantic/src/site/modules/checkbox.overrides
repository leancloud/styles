/*******************************
         Site Overrides
*******************************/
@import "../../themes/default/collections/form.variables";
@import "../collections/form.variables";

/*--------------
     Focus
---------------*/

.ui.checkbox input:focus ~ .box:before,
.ui.checkbox input:focus ~ label:before {
    box-shadow: @inputFocusBoxShadow;
}

/*--------------
     Hidden
---------------*/
/* Selectable Label */
.ui.checkbox input.hidden + label {
  user-select: auto;
}