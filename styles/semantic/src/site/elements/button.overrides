/*******************************
         Site Overrides
*******************************/

.ui.buttons .button {
  &:hover,
  &:focus,
  &.active,
  &:active {
    position: relative;
    z-index: 1;
  }
}

/*--------------
  Labeled Icon
---------------*/
.ui.labeled.icon.button:hover > .icon {
  background: fade(@primaryColor, 15%);
}